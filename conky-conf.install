#!/bin/bash


post_install() {
        chmod u+s /usr/sbin/dmidecode
 conky -c ~/.config/conky/conky.conf
 
 echo ">>>> remember to configure vnstat to your network, for better stats
       >>>> if sensors data wont show/work, run this command: sudo sensors-detect --auto"
}

post_upgrade() {
    post_install
}

post_remove() {
    post_install
}
